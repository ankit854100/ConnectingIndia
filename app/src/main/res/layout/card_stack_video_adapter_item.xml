<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    android:padding="20dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample1"
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_picture"/>

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/profile_picture"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/item_name"/>

                <TextView
                    android:id="@+id/item_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/profile_picture"
                    android:layout_below="@+id/item_name"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>


            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                android:id="@+id/simpleExoplayerView"/>

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/video_view"
                android:visibility="gone"/>

            <View  android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_repost"
                    android:text="1,190"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repost"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_liked"
                    android:text="2,000"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>

            <View  android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGrey"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/icons_container"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_whatsapp"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_comment_"
                        android:layout_gravity="center"
                        android:tint="@color/colorAccent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"/>


                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_repost"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_gravity="center"
                        android:tint="@color/colorAccent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"/>

                </LinearLayout>

                <View  android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/icons_container"
                    android:background="@color/lightGrey"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentRecyclerView"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="16dp"
        android:background="@drawable/transparent_background">


    </LinearLayout>

    <FrameLayout
        android:id="@+id/left_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_background">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_dislike_icon"
            android:tint="@color/colorRed"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_background">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_like_icon"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/top_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_black_24dp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottom_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_gravity="center"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>